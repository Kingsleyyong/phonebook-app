{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      },
      {
        "src": "server/main.py",
        "use": "@vercel/python"
      }
    ],
    "functions": {
      "api/main.py": {
        "runtime": "python3.8" 
      }
    },
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/main.py" },
      { "src": "/(.*)", "dest": "/client/dist/$1" }
    ]
  }
  